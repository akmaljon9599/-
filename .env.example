# Настройки сервера
PORT=3000
NODE_ENV=development

# Настройки базы данных
DB_HOST=localhost
DB_PORT=3306
DB_NAME=courier_system
DB_USER=root
DB_PASSWORD=password

# JWT настройки
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Настройки файлов
UPLOAD_PATH=./backend/uploads
MAX_FILE_SIZE=10485760

# Интеграции
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key
ABS_BANK_API_URL=https://api.abs-bank.com
ABS_BANK_API_KEY=your-abs-bank-api-key

# Bitrix24 интеграция
BITRIX24_WEBHOOK_URL=your-bitrix24-webhook-url
BITRIX24_USER_ID=your-bitrix24-user-id

# Настройки безопасности
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Настройки геолокации
LOCATION_UPDATE_INTERVAL=60000
LOCATION_ACCURACY_THRESHOLD=100