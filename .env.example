# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=courier_system
DB_USER=root
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=courier-system-files

# External APIs
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key
ABS_BANK_API_URL=https://api.abs-bank.com
ABS_BANK_API_KEY=your-abs-bank-api-key

# Bitrix24 Integration (optional)
BITRIX24_WEBHOOK_URL=your-bitrix24-webhook-url
BITRIX24_CLIENT_ID=your-bitrix24-client-id
BITRIX24_CLIENT_SECRET=your-bitrix24-client-secret

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Location Tracking
LOCATION_UPDATE_INTERVAL=60000