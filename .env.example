# Пример файла конфигурации окружения
# Скопируйте этот файл в .env и настройте под ваше окружение

# Настройки приложения
APP_DEBUG=true
APP_ENV=development

# Настройки базы данных
DB_HOST=localhost
DB_PORT=3306
DB_NAME=courier_system
DB_USER=root
DB_PASS=

# Настройки безопасности
JWT_SECRET=your-secret-key-change-in-production-environment

# Настройки уведомлений
EMAIL_ENABLED=false
SMS_ENABLED=false
PUSH_ENABLED=false

# API ключи внешних сервисов
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key
ABS_API_ENDPOINT=https://api.bank.com/abs
ABS_API_KEY=your-abs-api-key

# Настройки файлов
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads/